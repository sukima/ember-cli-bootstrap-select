    </div>
    <div class="row">
      <div class="col-sm-4">
        <p>{{list-picker content=listContent
                         selection=listChoices
                         action=(action "setListChoices")
                         multiple="true"
                         optionGroupPath="group"
                         optionLabelPath="content.label"
                         optionValuePath="content.value"}}</p>
      </div>
      <div class="col-sm-8">
{{#highlight-code lang="handlebars"}}
\{{list-picker content=listContent
              selection=listChoices
              action=(action "setListChoices")
              multiple="true"
              optionGroupPath="group"
              optionLabelPath="content.label"
              optionValuePath="content.value"}}
